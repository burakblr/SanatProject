
@model Sanat.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}


<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Alişveriş Sepeti</h2>
            <hr />


            @if (Model.CartLines.Count > 0)
            {
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th></th>
                    <th>Quantity</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Wub Total</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartLines)
        {
            <tr>
                <td>
                    <img src="~/Upload/@item.Product.Image" width="50" />
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    @item.Product.Price
                </td>
                <td>
                    @((item.Product.Price * item.Quantity).ToString("c"))
                </td>
                <td>
                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
            {
                @Html.Hidden("Id", item.Product.Id)
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-o" aria-hidden="true"></i>
                    Silme
                </button>

    }
                </td>

            </tr>
}

            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4"></td>
                    <td>
                        @Model.Total().ToString("c")
                    </td>
                </tr>
            </tfoot>

        </table>

        <div class="text-center">
            <a href="/Home/List" class="btn btn-primary">Alışverişe Devam Et</a>
            <a href="/Cart/Checkout" class="btn btn-primary">Alışverişi Tamamla</a>
        </div>

            }
            else
            {
                <div class="alert alert-warning" role="alert">
                   Alışveriş Sepetinizde Ürün Bulunmamaktadır!!
                </div>
            }




        </div>
    </div>
</div>